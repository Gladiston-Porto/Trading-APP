# Docker Production Environment Variables
# Copy this file to .env and adjust for your setup

# API Configuration
VITE_API_URL=http://backend:3333
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_CHARTS=true
VITE_ENABLE_THEME=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_EXPORT=true

# Analytics (optional)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ENDPOINT=https://analytics.example.com

# Monitoring (optional)
VITE_MONITORING_ENABLED=false
VITE_SENTRY_DSN=

# App Configuration
VITE_APP_NAME=Trading App
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Security
VITE_CSP_ENABLED=true
VITE_SECURE_COOKIES=true

# Backend (if containerized)
BACKEND_URL=http://backend:3333
DATABASE_URL=postgresql://user:password@postgres:5432/trading_db
REDIS_URL=redis://redis:6379

# Secrets (use Docker secrets in production)
JWT_SECRET=your-jwt-secret-here
API_KEY=your-api-key-here
